        <TextBlock x:Name="output"  HorizontalAlignment="Left" Height="118" Margin="0,60,0,0" TextWrapping="Wrap" Width="323" FontFamily="Microsoft YaHei UI" FontSize="36" VerticalAlignment="Top" Foreground="White" TextAlignment="Right" Text="..." IsEnabled="False"/>
        <Button x:Name="add" Height="50" Margin="10,385,0,0" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Microsoft YaHei UI Light" Click="add_Click" HorizontalAlignment="Left" Width="73" >
            <Button.Background>
                <ImageBrush ImageSource="Resources/down.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button  x:Name="minus"  Content="-" HorizontalAlignment="Left" Height="51" Margin="241,333,0,0" VerticalAlignment="Top" Width="80" Background="#FF131318" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Microsoft YaHei UI Light" Click="minus_Click"/>
