        <Button x:Name="cos"   Content="cos" HorizontalAlignment="Left" Height="50" Margin="83,450,0,0" VerticalAlignment="Top" Width="80" Background="#FF131318" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Microsoft YaHei UI Light" Click="cos_Click" />
        <Button x:Name="tan"   Content="tan" HorizontalAlignment="Left" Height="50" Margin="162,450,0,0" VerticalAlignment="Top" Width="79" Background="#FF131318" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Microsoft YaHei UI Light" Click="tan_Click"/>
        <Button x:Name="ctg" Content="cot" HorizontalAlignment="Left" Height="50" Margin="241,450,0,0" VerticalAlignment="Top" Width="79" Background="#FF131318" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Microsoft YaHei UI Light" Click="ctg_Click"/>
        <Label x:Name="lbl" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Background="{x:Null}" RenderTransformOrigin="-0.1,0.567" Width="110"/>
        <Label x:Name="lbl2" HorizontalAlignment="Center" Margin="115,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Background="{x:Null}" Width="93"/>
        <Label x:Name="lbl3" HorizontalAlignment="Right" Margin="213,0,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Background="{x:Null}" Width="110" />
