        <Button x:Name="del" Content="del" HorizontalAlignment="Left" Height="50" Margin="241,183,0,0" VerticalAlignment="Top" Width="79" Background="#FF131318" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Microsoft YaHei UI Light" Click="del_Click"/>
