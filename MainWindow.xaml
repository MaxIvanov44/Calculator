        <Button  x:Name="_6" Content="6" HorizontalAlignment="Left" Height="51" Margin="162,283,0,0" VerticalAlignment="Top" Width="79" Background="#FF000005" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Microsoft YaHei UI Light" Click="_6_Click"/>
        <Button  x:Name="_7" Content="7" HorizontalAlignment="Left" Height="50" Margin="3,233,0,0" VerticalAlignment="Top" Width="80" Background="#FF000005" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Microsoft YaHei UI Light" Click="_7_Click"/>
