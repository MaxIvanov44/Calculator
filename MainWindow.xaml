        <Button  x:Name="_2" Content="2" HorizontalAlignment="Left" Height="51" Margin="83,334,0,0" VerticalAlignment="Top" Width="79" Background="#FF000005" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontFamily="Microsoft YaHei UI Light" Click="_2_Click"/>
